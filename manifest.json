{
    "manifest_version": 3,
    "name": "MultiClip",
    "version": "1.0.0",
    "description": "A floating clipboard for copying, cutting, and pasting text with ease.",
    "permissions": [
        "storage",
        "clipboardRead",
        "clipboardWrite",
        "scripting",
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icons/icon48.png"
    }, 
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}